{% doc %}
  @prompt
    Make a perks section with a light cream background and wavy edges at the top, starting with a centered editable heading and an editable short description; below, add three perk items, each fully customizable with editable circular icons, editable titles, and editable supporting text; on desktop, display the three perks side by side in one row with equal spacing and centered alignment; on mobile, stack them vertically in one column with centered content; ensure all text and icons can be easily changed
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-perks-section-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    overflow: hidden;
  }

  .ai-perks-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ block.settings.wave_height }}px;
    background: {{ block.settings.background_color }};
    clip-path: polygon(
      0% 100%,
      5% 85%,
      15% 90%,
      25% 75%,
      35% 85%,
      45% 70%,
      55% 80%,
      65% 65%,
      75% 75%,
      85% 60%,
      95% 70%,
      100% 55%,
      100% 0%,
      0% 0%
    );
    z-index: 1;
  }

  .ai-perks-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding-top: {{ block.settings.wave_height }}px;
  }

  .ai-perks-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-perks-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_margin }}px;
    font-weight: 600;
  }

  .ai-perks-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  .ai-perks-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-perk-item-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.item_padding }}px;
  }

  .ai-perk-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto {{ block.settings.icon_margin }}px;
    font-size: {{ block.settings.icon_text_size }}px;
    color: {{ block.settings.icon_text_color }};
    font-weight: 600;
  }

  .ai-perk-title-{{ ai_gen_id }} {
    color: {{ block.settings.perk_title_color }};
    font-size: {{ block.settings.perk_title_size }}px;
    margin: 0 0 {{ block.settings.title_margin }}px;
    font-weight: 600;
  }

  .ai-perk-text-{{ ai_gen_id }} {
    color: {{ block.settings.perk_text_color }};
    font-size: {{ block.settings.perk_text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-perks-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 15px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-perks-container-{{ ai_gen_id }} {
      padding-top: {{ block.settings.wave_height | times: 0.8 }}px;
    }

    .ai-perks-section-{{ ai_gen_id }}::before {
      height: {{ block.settings.wave_height | times: 0.8 }}px;
    }

    .ai-perks-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 1.5 }}px;
    }

    .ai-perks-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-perk-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
      font-size: {{ block.settings.icon_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-perks-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-perks-container-{{ ai_gen_id }}">
    <div class="ai-perks-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-perks-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <p class="ai-perks-description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
      {% endif %}
    </div>

    <div class="ai-perks-grid-{{ ai_gen_id }}">
      <div class="ai-perk-item-{{ ai_gen_id }}">
        <div class="ai-perk-icon-{{ ai_gen_id }}">
          {{ block.settings.perk_1_icon }}
        </div>
        <h3 class="ai-perk-title-{{ ai_gen_id }}">{{ block.settings.perk_1_title }}</h3>
        <p class="ai-perk-text-{{ ai_gen_id }}">{{ block.settings.perk_1_text }}</p>
      </div>

      <div class="ai-perk-item-{{ ai_gen_id }}">
        <div class="ai-perk-icon-{{ ai_gen_id }}">
          {{ block.settings.perk_2_icon }}
        </div>
        <h3 class="ai-perk-title-{{ ai_gen_id }}">{{ block.settings.perk_2_title }}</h3>
        <p class="ai-perk-text-{{ ai_gen_id }}">{{ block.settings.perk_2_text }}</p>
      </div>

      <div class="ai-perk-item-{{ ai_gen_id }}">
        <div class="ai-perk-icon-{{ ai_gen_id }}">
          {{ block.settings.perk_3_icon }}
        </div>
        <h3 class="ai-perk-title-{{ ai_gen_id }}">{{ block.settings.perk_3_title }}</h3>
        <p class="ai-perk-text-{{ ai_gen_id }}">{{ block.settings.perk_3_text }}</p>
      </div>
    </div>
  </div>
</div>

