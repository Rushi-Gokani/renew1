            %}
            {% if benefit_label != blank %}
              <li class="ai-how-it-works-benefit-{{ ai_gen_id }}">
                <div class="ai-how-it-works-benefit-icon-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                </div>
                <div class="ai-how-it-works-benefit-content-{{ ai_gen_id }}">
                  <div class="ai-how-it-works-benefit-label-{{ ai_gen_id }}">{{ benefit_label }}</div>
                  {% if benefit_text != blank %}
