{% doc %}
  @prompt
    Make a “How it Works” section with a dark green background and a centered heading at the top; below, add two tier cards side by side on desktop with rounded corners and shadow; each card should have an image at the top, a bold tier title, and a list of benefits with icons, bold labels, and supporting text; on mobile, stack the cards vertically so Tier 1 appears on top and Tier 2 appears below.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-how-it-works-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    width: 100%;
  }

  .ai-how-it-works-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-how-it-works-heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
    line-height: 1.2;
  }

  .ai-how-it-works-cards-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.cards_gap }}px;
    margin-top: {{ block.settings.cards_margin_top }}px;
  }

  .ai-how-it-works-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-how-it-works-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-how-it-works-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.card_image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.card_image_border_radius }}px;
    margin-bottom: {{ block.settings.card_image_margin_bottom }}px;
  }

  .ai-how-it-works-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.card_image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.card_image_border_radius }}px;
    margin-bottom: {{ block.settings.card_image_margin_bottom }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-how-it-works-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-how-it-works-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 700;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 {{ block.settings.card_title_margin_bottom }}px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    line-height: 1.3;
  }

  .ai-how-it-works-benefits-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-how-it-works-benefit-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    margin-bottom: {{ block.settings.benefit_spacing }}px;
  }

  .ai-how-it-works-benefit-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-how-it-works-benefit-icon-{{ ai_gen_id }} {
    width: {{ block.settings.benefit_icon_size }}px;
    height: {{ block.settings.benefit_icon_size }}px;
    background-color: {{ block.settings.benefit_icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: {{ block.settings.benefit_icon_margin_right }}px;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .ai-how-it-works-benefit-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.benefit_icon_size | times: 0.6 }}px;
    height: {{ block.settings.benefit_icon_size | times: 0.6 }}px;
    stroke: {{ block.settings.benefit_icon_color }};
    fill: none;
  }

  .ai-how-it-works-benefit-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-how-it-works-benefit-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.benefit_label_size }}px;
    font-weight: 600;
    color: {{ block.settings.benefit_label_color }};
    margin: 0 0 {{ block.settings.benefit_label_margin_bottom }}px;
    font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
    line-height: 1.4;
  }

  .ai-how-it-works-benefit-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.benefit_text_size }}px;
    color: {{ block.settings.benefit_text_color }};
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-how-it-works-cards-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.cards_gap_mobile }}px;
    }

    .ai-how-it-works-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_mobile }}px 16px {{ block.settings.section_padding_bottom_mobile }}px;
    }

    .ai-how-it-works-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
      margin-bottom: {{ block.settings.heading_margin_bottom_mobile }}px;
    }

    .ai-how-it-works-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding_mobile }}px;
    }

    .ai-how-it-works-card-image-{{ ai_gen_id }},
    .ai-how-it-works-card-image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.card_image_height_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-how-it-works-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-how-it-works-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-how-it-works-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-how-it-works-cards-{{ ai_gen_id }}">
      <div class="ai-how-it-works-card-{{ ai_gen_id }}">
        {% if block.settings.tier1_image %}
          <img
            src="{{ block.settings.tier1_image | image_url: width: 600 }}"
            alt="{{ block.settings.tier1_image.alt | escape }}"
            class="ai-how-it-works-card-image-{{ ai_gen_id }}"
            loading="lazy"
            width="600"
            height="{{ block.settings.card_image_height }}"
          >
        {% else %}
          <div class="ai-how-it-works-card-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if block.settings.tier1_title != blank %}
          <h3 class="ai-how-it-works-card-title-{{ ai_gen_id }}">{{ block.settings.tier1_title }}</h3>
        {% endif %}

        <ul class="ai-how-it-works-benefits-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign benefit_label_key = 'tier1_benefit_' | append: i | append: '_label'
              assign benefit_text_key = 'tier1_benefit_' | append: i | append: '_text'
              assign benefit_label = block.settings[benefit_label_key]
              assign benefit_text = block.settings[benefit_text_key]
            %}
            {% if benefit_label != blank %}
              <li class="ai-how-it-works-benefit-{{ ai_gen_id }}">
                <div class="ai-how-it-works-benefit-icon-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                </div>
                <div class="ai-how-it-works-benefit-content-{{ ai_gen_id }}">
                  <div class="ai-how-it-works-benefit-label-{{ ai_gen_id }}">{{ benefit_label }}</div>
                  {% if benefit_text != blank %}
                    <div class="ai-how-it-works-benefit-text-{{ ai_gen_id }}">{{ benefit_text }}</div>
                  {% endif %}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <div class="ai-how-it-works-card-{{ ai_gen_id }}">
        {% if block.settings.tier2_image %}
          <img
            src="{{ block.settings.tier2_image | image_url: width: 600 }}"
            alt="{{ block.settings.tier2_image.alt | escape }}"
            class="ai-how-it-works-card-image-{{ ai_gen_id }}"
            loading="lazy"
            width="600"
            height="{{ block.settings.card_image_height }}"
          >
        {% else %}
          <div class="ai-how-it-works-card-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if block.settings.tier2_title != blank %}
          <h3 class="ai-how-it-works-card-title-{{ ai_gen_id }}">{{ block.settings.tier2_title }}</h3>
        {% endif %}

        <ul class="ai-how-it-works-benefits-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign benefit_label_key = 'tier2_benefit_' | append: i | append: '_label'
              assign benefit_text_key = 'tier2_benefit_' | append: i | append: '_text'
              assign benefit_label = block.settings[benefit_label_key]
