    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  .ai-customer-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .ai-customer-testimonials-content-{{ ai_gen_id }} {
