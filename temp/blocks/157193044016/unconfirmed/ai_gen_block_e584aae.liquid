<script>
  (function() {
    class CustomerTestimonials{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isPlaying = true;
        this.autoScrollInterval = null;
        this.autoScrollSpeed = parseInt(this.dataset.autoScrollSpeed) || 5;
        this.touchStartX = 0;
        this.touchEndX = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-customer-testimonials-carousel-track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-customer-testimonials-carousel-item-{{ ai_gen_id }}');
        this.totalItems = this.items.length / 2;
        this.itemWidth = this.items[0] ? this.items[0].offsetWidth + 20 : 100;

        this.setupEventListeners();
        this.startAutoScroll();
        this.updatePlayPauseButton();
      }

      setupEventListeners() {
        const prevButton = this.querySelector('[data-action="prev"]');
        const nextButton = this.querySelector('[data-action="next"]');
        const playPauseButton = this.querySelector('[data-action="play-pause"]');
        const speedSlider = this.querySelector('[data-speed-control]');

        if (prevButton) {
          prevButton.addEventListener('click', () => this.goToPrev());
        }

        if (nextButton) {
          nextButton.addEventListener('click', () => this.goToNext());
        }

        if (playPauseButton) {
          playPauseButton.addEventListener('click', () => this.togglePlayPause());
        }

        if (speedSlider) {
          speedSlider.addEventListener('input', (e) => {
            this.autoScrollSpeed = parseInt(e.target.value);
            if (this.isPlaying) {
              this.stopAutoScroll();
              this.startAutoScroll();
            }
          });
        }

        if (this.track) {
          this.track.addEventListener('touchstart', (e) => {
            this.touchStartX = e.changedTouches[0].screenX;
          });

          this.track.addEventListener('touchend', (e) => {
            this.touchEndX = e.changedTouches[0].screenX;
            this.handleSwipe();
          });
        }

        window.addEventListener('resize', () => {
          this.itemWidth = this.items[0] ? this.items[0].offsetWidth + 20 : 100;
          this.updateCarousel();
        });
      }

      handleSwipe() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.goToNext();
          } else {
            this.goToPrev();
          }
        }
      }

      goToNext() {
        this.currentIndex = (this.currentIndex + 1) % this.totalItems;
        this.updateCarousel();
      }

      goToPrev() {
        this.currentIndex = (this.currentIndex - 1 + this.totalItems) % this.totalItems;
        this.updateCarousel();
      }

      updateCarousel() {
        if (this.track) {
          const translateX = -this.currentIndex * this.itemWidth;
          this.track.style.transform = `translateX(${translateX}px)`;
        }
      }

      togglePlayPause() {
        this.isPlaying = !this.isPlaying;
        
        if (this.isPlaying) {
          this.startAutoScroll();
        } else {
          this.stopAutoScroll();
        }
        
        this.updatePlayPauseButton();
      }

      updatePlayPauseButton() {
        const playPauseButton = this.querySelector('[data-action="play-pause"]');
        const playIcon = playPauseButton?.querySelector('.play-icon');
        const pauseIcon = playPauseButton?.querySelector('.pause-icon');

        if (playIcon && pauseIcon) {
          if (this.isPlaying) {
            playIcon.style.display = 'none';
            pauseIcon.style.display = 'block';
          } else {
            playIcon.style.display = 'block';
            pauseIcon.style.display = 'none';
          }
        }
      }

      startAutoScroll() {
        this.stopAutoScroll();
        const interval = Math.max(1000, 6000 - (this.autoScrollSpeed - 1) * 500);
        
        this.autoScrollInterval = setInterval(() => {
          this.goToNext();
        }, interval);
      }

      stopAutoScroll() {
        if (this.autoScrollInterval) {
          clearInterval(this.autoScrollInterval);
          this.autoScrollInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoScroll();
      }
    }

    customElements.define('customer-testimonials-{{ ai_gen_id }}', CustomerTestimonials{{ ai_gen_id }});
  })();
</script>

