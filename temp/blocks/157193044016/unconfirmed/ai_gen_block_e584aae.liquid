            {% liquid
              assign photo_key = 'customer_photo_' | append: i
              assign photo = block.settings[photo_key]
            %}
            <div class="ai-customer-testimonials-carousel-item-{{ ai_gen_id }}">
              {% if photo != blank %}
                <img
                  src="{{ photo | image_url: width: 200 }}"
                  alt="Customer {{ i }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-customer-testimonials-photo-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
