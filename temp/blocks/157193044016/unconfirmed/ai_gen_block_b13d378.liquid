{% doc %}
  @prompt
    Make a perks section with a light cream background and wavy edges at the top, starting with a centered editable heading and an editable short description; below, add three perk items, each fully customizable with editable circular icons, editable titles, and editable supporting text; on desktop, display the three perks side by side in one row with equal spacing and centered alignment; on mobile, stack them vertically in one column with centered content; ensure all text and icons can be easily changed. need input fields of the icons. and the three icons will be gift icon, GBP currency icon, & heart icon, all enclosed within the circle
    
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-perks-section-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    overflow: hidden;
  }

  .ai-perks-section-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 40px;
    background: {{ block.settings.background_color }};
    clip-path: polygon(0 0, 100% 0, 100% 60%, 95% 70%, 90% 80%, 85% 85%, 80% 90%, 75% 95%, 70% 100%, 65% 95%, 60% 90%, 55% 85%, 50% 80%, 45% 85%, 40% 90%, 35% 95%, 30% 100%, 25% 95%, 20% 90%, 15% 85%, 10% 80%, 5% 70%, 0 60%);
    z-index: 1;
  }

  .ai-perks-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-perks-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-perks-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    font-weight: {{ settings.type_heading_font.weight }};
    line-height: 1.2;
  }

  .ai-perks-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    line-height: 1.5;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-perks-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    align-items: start;
  }

  .ai-perk-item-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.item_padding }}px;
  }

  .ai-perk-icon-wrapper-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.icon_background_color }};
    margin-bottom: {{ block.settings.icon_spacing }}px;
    border: {{ block.settings.icon_border_width }}px solid {{ block.settings.icon_border_color }};
  }

  .ai-perk-icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
    color: {{ block.settings.icon_color }};
    stroke-width: 1.5;
  }

  .ai-perk-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
    font-weight: {{ settings.type_subheading_font.weight }};
    line-height: 1.3;
  }

  .ai-perk-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.perk_text_size }}px;
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-perks-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-perks-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-perks-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }

    .ai-perk-icon-wrapper-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.85);
      height: calc({{ block.settings.icon_size }}px * 0.85);
    }

    .ai-perk-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.85 * 0.5);
      height: calc({{ block.settings.icon_size }}px * 0.85 * 0.5);
    }

    .ai-perk-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }

    .ai-perk-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.perk_text_size }}px * 0.9);
    }
  }
{% endstyle %}

