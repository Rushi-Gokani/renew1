
<div class="password-section-container">
  {%- if section.settings.background_image != blank -%}
    {{ section.settings.background_image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'password-background-image' }}
  {%- endif -%}
  
  <div class="password-content-overlay">
    <div class="password-content-inner">
      <h1 class="heading-launch">{{ section.settings.heading_launch }}</h1>
      <h2 class="heading-brand">{{ section.settings.heading_brand }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>

      <div class="form-wrapper">
        {% form 'customer', class: 'newsletter-form' %}
          {% if form.posted_successfully? %}
            <p class="form-success">Thanks for subscribing!</p>
          {% else %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <input 
              type="email" 
              name="contact[email]" 
              class="input-field" 
              placeholder="Email Address" 
              required
              autocorrect="off"
              autocapitalize="off"
            >
            
            <input 
              type="tel" 
              name="contact[note][Mobile Number]" 
              class="input-field" 
              placeholder="Mobile Number"
            >

            <button type="submit" class="submit-btn">
              Notify Me
            </button>
            
            {% if form.errors %}
              <div class="form-error">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Alex+Brush&family=Montserrat:wght@300;400;500;600&display=swap');

  .password-section-container {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .password-background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .password-content-overlay {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .password-content-inner {
    text-align: center;
    color: #fff;
    width: 100%;
    max-width: 800px;
    padding: 20px;
  }

  .heading-launch {
    font-family: 'Alex Brush', cursive;
    font-size: 5rem;
    margin: 0;
    line-height: 1.2;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .heading-brand {
    font-family: 'Montserrat', sans-serif;
    font-size: 2rem;
    font-weight: 500;
    letter-spacing: 2px;
    margin: 10px 0;
    text-transform: uppercase;
    color: #fff;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
  }

  .subheading {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.2rem;
    font-weight: 400;
    margin-bottom: 40px;
    color: #fff;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
  }

  .form-wrapper {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 40px;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .input-field {
    width: 100%;
    padding: 15px 20px;
    border-radius: 30px;
    border: none;
    background: rgba(255, 255, 255, 0.9);
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    color: #333;
    outline: none;
    box-sizing: border-box;
  }

  .input-field::placeholder {
    color: #888;
  }

  .submit-btn {
    width: 100%;
    max-width: 200px;
    margin: 10px auto 0;
    padding: 12px 30px;
    border-radius: 30px;
    border: none;
    background-color: #4A6741;
    color: white;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #3a5233;
  }

  .form-success {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.2rem;
    color: #fff;
    font-weight: bold;
  }

  .form-error {
    color: #ffcccc;
    margin-top: 10px;
    font-family: 'Montserrat', sans-serif;
  }

  @media (max-width: 768px) {
    .heading-launch {
      font-size: 3.5rem;
    }
    .heading-brand {
      font-size: 1.5rem;
    }
    .form-wrapper {
      padding: 25px;
      margin: 0 15px;
    }
  }
{% endstylesheet %}

{% schema %}
