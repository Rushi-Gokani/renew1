  "name": "Password Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading_launch",
      "label": "Launch Heading",
      "default": "Launching Soon"
    },
    {
      "type": "text",
      "id": "heading_brand",
      "label": "Brand Heading",
      "default": "RENEÃœW SUPERFOODS"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get 20% Off for Early Birds"
    }
  ]
}
{% endschema %}
