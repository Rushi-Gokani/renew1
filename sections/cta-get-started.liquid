<section id="section-{{ section.id }}" class="cta-get-started" style="background-color: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="page-width">
    <div class="cta-inner" style="text-align: {{ section.settings.alignment }}; max-width: {{ section.settings.max_width }}px; margin: 0 auto;">
      {% if section.settings.heading != blank %}
        <h2 class="cta-heading" style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="cta-subheading rte" style="color: {{ section.settings.subtext_color }};">{{ section.settings.subheading }}</div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a
          class="cta-button"
          href="{{ section.settings.button_link | default: '#' }}"
          style="
            background-color: {{ section.settings.button_bg }};
            color: {{ section.settings.button_text_color }};
            border-radius: {{ section.settings.button_radius }}px;
          "
        >{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>

  <style>
    #section-{{ section.id }} .cta-heading {
      margin: 0 0 12px;
      font-size: {{ section.settings.heading_size }}px;
      line-height: 1.15;
      font-weight: 700;
    }

    #section-{{ section.id }} .cta-subheading {
      margin: 0 0 24px;
      font-size: {{ section.settings.subheading_size }}px;
      line-height: 1.6;
      opacity: {{ section.settings.subtext_opacity | divided_by: 100.0 }};
    }

    #section-{{ section.id }} .cta-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      font-weight: 700;
      padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
      box-shadow: {% if section.settings.button_shadow %}0 2px 6px rgba(0,0,0,.1){% else %}none{% endif %};
      border: none;
      transition: transform .12s ease, filter .2s ease;
    }

    #section-{{ section.id }} .cta-button:hover {
      transform: translateY(-1px);
      filter: brightness(0.98);
    }

    @media screen and (max-width: 749px) {
      #section-{{ section.id }} .cta-heading { font-size: {{ section.settings.heading_size | times: 0.8 | round }}px; }
      #section-{{ section.id }} .cta-subheading { font-size: {{ section.settings.subheading_size | times: 0.9 | round }}px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "CTA - Get Started",
  "tag": "section",
  "class": "section-cta-get-started",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Ready to Get Started?" },
    { "type": "range", "id": "heading_size", "label": "Heading size (px)", "min": 24, "max": 72, "step": 1, "default": 40 },

    { "type": "richtext", "id": "subheading", "label": "Subheading", "default": "<p>Join the program today and start earning commissions while promoting products you love.</p>" },
    { "type": "range", "id": "subheading_size", "label": "Subheading size (px)", "min": 12, "max": 28, "step": 1, "default": 18 },
    { "type": "range", "id": "subtext_opacity", "label": "Subheading opacity (%)", "min": 40, "max": 100, "step": 5, "default": 80 },

    { "type": "text", "id": "button_label", "label": "Button label", "default": "Apply Now" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "color", "id": "button_bg", "label": "Button background", "default": "#10B981" },
    { "type": "color", "id": "button_text_color", "label": "Button text color", "default": "#ffffff" },
    { "type": "range", "id": "button_radius", "label": "Button radius (px)", "min": 0, "max": 48, "step": 2, "default": 28 },
    { "type": "range", "id": "button_padding_x", "label": "Button padding X (px)", "min": 8, "max": 40, "step": 1, "default": 28 },
    { "type": "range", "id": "button_padding_y", "label": "Button padding Y (px)", "min": 6, "max": 24, "step": 1, "default": 14 },
    { "type": "checkbox", "id": "button_shadow", "label": "Button subtle shadow", "default": true },

    { "type": "select", "id": "alignment", "label": "Content alignment", "default": "center", "options": [
      { "value": "left", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "right", "label": "Right" }
    ] },

    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#f6faf8" },
    { "type": "color", "id": "text_color", "label": "Heading color", "default": "#101828" },
    { "type": "color", "id": "subtext_color", "label": "Subheading color", "default": "#3F4C5C" },

    { "type": "range", "id": "max_width", "label": "Max content width (px)", "min": 480, "max": 1200, "step": 10, "default": 760 },
    { "type": "range", "id": "padding_top", "label": "Top spacing (px)", "min": 0, "max": 200, "step": 4, "default": 64 },
    { "type": "range", "id": "padding_bottom", "label": "Bottom spacing (px)", "min": 0, "max": 200, "step": 4, "default": 64 }
  ],
  "presets": [
    { "name": "CTA - Get Started", "category": "Call to action" }
  ]
}
{% endschema %}


