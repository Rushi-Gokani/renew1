    }
    
    .superfoods-container-{{ block_id }} {
      overflow-x: hidden;
      max-width: 100%;
    }
    
    .superfoods-carousel-wrapper-{{ block_id }} {
      overflow-x: hidden;
      max-width: 100%;
    }
  }

  .superfoods-container-{{ block_id }} {
    max-width: 1200px;
    margin: 0 auto;
    overflow-x: hidden;
    box-sizing: border-box;
    width: 100%;
    padding: 0 20px;
  }

  .superfoods-title-{{ block_id }} {
    font-family: {{ block.settings.title_font.family }}, serif;
    font-size: {{ block.settings.title_size }}px;
    font-weight: bold;
