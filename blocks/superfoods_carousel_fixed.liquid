<div class="superfoods-section-{{ block_id }}" {{ block.shopify_attributes }}>
  <div class="superfoods-container-{{ block_id }}">
    {% if block.settings.title != blank %}
      <h2 class="superfoods-title-{{ block_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    
    {% if block.settings.subtitle != blank %}
      <p class="superfoods-subtitle-{{ block_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}

    <div class="superfoods-carousel-container-{{ block_id }}">
      <div class="superfoods-carousel-wrapper-{{ block_id }}">
        <div class="superfoods-carousel-{{ block_id }}" data-carousel>
          {% for i in (1..6) %}
            {% liquid
              assign image_key = 'product_image_' | append: i
              assign alt_key = 'product_alt_' | append: i
              assign name_key = 'product_name_' | append: i
              assign product_image = block.settings[image_key]
              assign product_alt = block.settings[alt_key]
              assign product_name = block.settings[name_key]
            %}
            <div class="superfoods-card-{{ block_id }}" data-slide="{{ forloop.index0 }}">
              <div class="superfoods-image-wrapper-{{ block_id }}">
                {% if product_image != blank %}
                  {% assign image_alt = product_alt | default: product_name | default: 'Superfood ' | append: i | escape %}
                  {% assign image_class = 'superfoods-image-' | append: block_id %}
                  {{
                    product_image
                    | image_url: width: 600
                    | image_tag:
                      width: 600,
                      height: 600,
                      alt: image_alt,
                      class: image_class,
                      loading: 'lazy'
                  }}
                {% else %}
                  <div class="superfoods-image-{{ block_id }} superfoods-placeholder-{{ block_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag: 'superfoods-placeholder-svg' }}
                  </div>
                {% endif %}
              </div>
              <h3 class="superfoods-product-name-{{ block_id }}">{{ product_name | default: 'Superfood '}}</h3>
            </div>
          {% endfor %}
        </div>
      </div>

      <button class="superfoods-nav-arrow-{{ block_id }} superfoods-nav-arrow--prev-{{ block_id }}" data-direction="prev" aria-label="Previous products">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button class="superfoods-nav-arrow-{{ block_id }} superfoods-nav-arrow--next-{{ block_id }}" data-direction="next" aria-label="Next products">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="superfoods-pagination-{{ block_id }}" data-pagination></div>
  </div>
</div>

<script>
(function() {
  class SuperfoodsCarousel{{ block_id }} {
    constructor() {
      this.totalSlides = 6;
      this.currentPage = 0;
      this.slidesPerView = 3;
      this.totalPages = 2;
    }

    init() {
      this.carousel = document.querySelector('.superfoods-carousel-{{ block_id }}');
      this.carouselWrapper = document.querySelector('.superfoods-carousel-wrapper-{{ block_id }}');
      this.carouselContainer = document.querySelector('.superfoods-carousel-container-{{ block_id }}');
      this.prevButton = document.querySelector('.superfoods-nav-arrow--prev-{{ block_id }}');
      this.nextButton = document.querySelector('.superfoods-nav-arrow--next-{{ block_id }}');
      this.pagination = document.querySelector('.superfoods-pagination-{{ block_id }}');

      if (!this.carousel || !this.carouselWrapper || !this.carouselContainer) return;

      this.updateBreakpoints();
      this.createDots();
      this.update();

      this.prevButton.addEventListener('click', () => this.go(-1));
      this.nextButton.addEventListener('click', () => this.go(1));

      // Touch swipe
      let startX = 0, dragging = false;
      this.carousel.addEventListener('touchstart', e => {
        startX = e.touches[0].clientX;
        dragging = true;
      }, { passive: true });
      
      this.carousel.addEventListener('touchmove', e => {
        if (!dragging) return;
        e.preventDefault();
      }, { passive: false });
      
      this.carousel.addEventListener('touchend', e => {
        if (!dragging) return;
        dragging = false;
        const dx = startX - e.changedTouches[0].clientX;
        // Reduced threshold for better mobile responsiveness
        if (Math.abs(dx) > 30) this.go(dx > 0 ? 1 : -1);
      });

      window.addEventListener('resize', () => {
        this.updateBreakpoints();
        this.update();
      });
    }

    getSlidesPerView() {
      if (window.innerWidth >= 990) return 3;  // Desktop: 3 cards
      if (window.innerWidth >= 750) return 3;  // Tablet: 3 cards
      return 1;  // Mobile: 1 card only
    }

    updateBreakpoints() {
      this.slidesPerView = this.getSlidesPerView();
      this.totalPages = Math.ceil(this.totalSlides / this.slidesPerView);
      this.currentPage = Math.min(this.currentPage, this.totalPages - 1);
      
      // Debug logging
      console.log('Carousel breakpoints updated:', {
        slidesPerView: this.slidesPerView,
        totalPages: this.totalPages,
        currentPage: this.currentPage,
        screenWidth: window.innerWidth
      });
    }

    createDots() {
      if (!this.pagination) return;
      
      this.pagination.innerHTML = '';
      for (let i = 0; i < this.totalPages; i++) {
        const dot = document.createElement('button');
        dot.className = `superfoods-dot-{{ block_id }} ${i === this.currentPage ? 'active' : ''}`;
        dot.setAttribute('aria-label', `Go to page ${i + 1}`);
        dot.addEventListener('click', () => {
          this.currentPage = i;
          this.update();
        });
        this.pagination.appendChild(dot);
      }
    }

    go(dir) {
      const next = Math.max(0, Math.min(this.currentPage + dir, this.totalPages - 1));
      if (next !== this.currentPage) {
        this.currentPage = next;
        this.update();
      }
    }

    update() {
      if (!this.carousel || !this.carouselWrapper || !this.carouselContainer) return;

      const firstCard = this.carousel.querySelector('[data-slide]');
      const carouselStyles = window.getComputedStyle(this.carousel);
      const fallbackGap = {{ block.settings.card_spacing }};
      const gapRaw = carouselStyles.columnGap || carouselStyles.gap || `${fallbackGap}px`;
      const gap = parseFloat(gapRaw) || fallbackGap;
      const cardRect = firstCard ? firstCard.getBoundingClientRect() : null;
      const cardWidth = cardRect ? cardRect.width : {{ block.settings.image_size }};
      const isDesktop = window.innerWidth >= 990;

      if (this.slidesPerView >= 3) {
        const visibleWidth = cardWidth * this.slidesPerView + gap * (this.slidesPerView - 1);
        const translateX = -this.currentPage * visibleWidth;

        if (isDesktop) {
          this.carouselWrapper.style.width = `${visibleWidth}px`;
        } else {
          this.carouselWrapper.style.removeProperty('width');
        }

        this.carousel.style.transform = `translate3d(${translateX}px,0,0)`;

        // Debug logging
        console.log('Desktop carousel update:', {
          currentPage: this.currentPage,
          cardWidth,
          gap,
          visibleWidth,
          translateX,
          totalPages: this.totalPages
        });
      } else {
        this.carouselWrapper.style.removeProperty('width');
        const viewportW = window.innerWidth;
        this.carousel.style.transform = `translate3d(${-this.currentPage * viewportW}px,0,0)`;
      }

      // Update dots
      if (this.pagination) {
        const dots = this.pagination.querySelectorAll('.superfoods-dot-{{ block_id }}');
        dots.forEach((d, i) => d.classList.toggle('active', i === this.currentPage));
      }

      // Update arrows
      if (this.prevButton && this.nextButton) {
        this.prevButton.disabled = this.currentPage === 0;
        this.nextButton.disabled = this.currentPage === this.totalPages - 1;
        this.prevButton.style.opacity = this.prevButton.disabled ? '0.5' : '1';
        this.nextButton.style.opacity = this.nextButton.disabled ? '0.5' : '1';
      }
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new SuperfoodsCarousel{{ block_id }}().init();
    });
  } else {
    new SuperfoodsCarousel{{ block_id }}().init();
  }
})();
</script>

