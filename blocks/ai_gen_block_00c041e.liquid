{% doc %}
  @prompt
    Generate me a testimonial section in which the image is constant and there is in 2 columns and the column where the testimonials are moving should have the text name of the person details and this whole section should have a headline it should match the theme

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-section-{{ ai_gen_id }} {
    padding: 60px 20px;
    {% comment %} background-color: {{ block.settings.background_color }}; {% endcomment %}
    color: {{ block.settings.text_color }};
  }

  .ai-testimonial-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-testimonial-heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);letter-spacing: var(--font-heading-style);
  }

  .ai-testimonial-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-testimonial-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 500px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-testimonial-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-testimonial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-testimonial-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-testimonial-slider-{{ ai_gen_id }} {
    position: relative;
    height: 400px;
    overflow: hidden;
  }

  .ai-testimonial-track-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 40px;
    animation: ai-testimonial-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    padding: 30px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.card_border_color }};
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_text_size }}px;
    line-height: 1.6;
    margin-bottom: 20px;
    color: {{ block.settings.testimonial_text_color }};
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
  }

  .ai-testimonial-details-{{ ai_gen_id }} {
    font-size: {{ block.settings.details_size }}px;
    color: {{ block.settings.details_color }};
    opacity: 0.8;
  }

  @keyframes ai-testimonial-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  .ai-testimonial-track-{{ ai_gen_id }}:hover {
    animation-play-state: paused;
  }

  @media screen and (max-width: 768px) {
    .ai-testimonial-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-testimonial-image-wrapper-{{ ai_gen_id }} {
      height: 300px;
    }

    .ai-testimonial-slider-{{ ai_gen_id }} {
      height: 300px;
    }

    .ai-testimonial-section-{{ ai_gen_id }} {
      padding: 40px 20px;
    }
  }
{% endstyle %}

<testimonial-slider-{{ ai_gen_id }}
  class="ai-testimonial-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-testimonial-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-testimonial-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-testimonial-content-{{ ai_gen_id }}">
      <div class="ai-testimonial-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 600 }}"
            alt="{{ block.settings.image.alt | escape }}"
            class="ai-testimonial-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-testimonial-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-testimonial-empty-state-{{ ai_gen_id }}">
              Add an image to showcase your testimonials
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-testimonial-slider-{{ ai_gen_id }}">
        <div class="ai-testimonial-track-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% liquid
              assign testimonial_key = 'testimonial_' | append: i
              assign name_key = 'name_' | append: i
              assign details_key = 'details_' | append: i

              assign testimonial = block.settings[testimonial_key]
              assign name = block.settings[name_key]
              assign details = block.settings[details_key]
            %}

            {% if testimonial != blank or name != blank %}
              <div class="ai-testimonial-card-{{ ai_gen_id }}">
                {% if testimonial != blank %}
                  <div class="ai-testimonial-text-{{ ai_gen_id }}">
                    "{{ testimonial }}"
                  </div>
                {% endif %}<div class="ai-testimonial-author-{{ ai_gen_id }}">
                  {% if name != blank %}
                    <div class="ai-testimonial-name-{{ ai_gen_id }}">{{ name }}</div>
                  {% endif %}
                  {% if details != blank %}
                    <div class="ai-testimonial-details-{{ ai_gen_id }}">{{ details }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}

          {% for i in (1..6) %}
            {% liquid
              assign testimonial_key = 'testimonial_' | append: i
              assign name_key = 'name_' | append: i
              assign details_key = 'details_' | append: i

              assign testimonial = block.settings[testimonial_key]
              assign name = block.settings[name_key]
              assign details = block.settings[details_key]
            %}

            {% if testimonial != blank or name != blank %}
              <div class="ai-testimonial-card-{{ ai_gen_id }}">
                {% if testimonial != blank %}
                  <div class="ai-testimonial-text-{{ ai_gen_id }}">
                    "{{ testimonial }}"
                  </div>
                {% endif %}
                <div class="ai-testimonial-author-{{ ai_gen_id }}">
                  {% if name != blank %}
                    <div class="ai-testimonial-name-{{ ai_gen_id }}">{{ name }}</div>
                  {% endif %}
                  {% if details != blank %}
                    <div class="ai-testimonial-details-{{ ai_gen_id }}">{{ details }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</testimonial-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-testimonial-track-{{ ai_gen_id }}');
        this.setupAnimation();
      }

      setupAnimation() {
        if (!this.track) return;

        this.track.addEventListener('mouseenter', () => {
          this.track.style.animationPlayState = 'paused';
        });

        this.track.addEventListener('mouseleave', () => {
          this.track.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('testimonial-slider-{{ ai_gen_id }}', TestimonialSlider{{ ai_gen_id }});
  })();
</script>

