{% comment %}
  Reel Block - Instagram/TikTok style vertical video
{% endcomment %}

<div class="reel-container {{ block.settings.alignment }}" {{ block.shopify_attributes }}>
  <div class="reel-wrapper">
    {% if block.settings.video != blank %}
      <video
        class="reel-video"
        src="{{ block.settings.video | video_url }}"
        poster="{% if block.settings.cover_image != blank %}{{ block.settings.cover_image | image_url: width: 400 }}{% elsif block.settings.video.preview_image != blank %}{{ block.settings.video.preview_image | image_url: width: 400 }}{% endif %}"
        {% if block.settings.autoplay %}autoplay muted playsinline{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        controls
      >
      </video>
    {% elsif block.settings.video_url != blank %}
      <div class="reel-iframe-wrapper">
        {% if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' %}
          {% assign video_id = block.settings.video_url | split: '/' | last | split: '?v=' | last | split: '&' | first %}
          <iframe
            class="reel-iframe"
            src="https://www.youtube.com/embed/{{ video_id }}?rel=0&showinfo=0{% if block.settings.autoplay %}&autoplay=1&mute=1{% endif %}{% if block.settings.loop %}&loop=1&playlist={{ video_id }}{% endif %}"
            frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        {% elsif block.settings.video_url contains 'vimeo.com' %}
          {% assign video_id = block.settings.video_url | split: '/' | last %}
          <iframe
            class="reel-iframe"
            src="https://player.vimeo.com/video/{{ video_id }}?{% if block.settings.autoplay %}autoplay=1&muted=1{% endif %}{% if block.settings.loop %}&loop=1{% endif %}"
            frameborder="0"
            allow="autoplay; fullscreen"
            allowfullscreen
          ></iframe>
        {% endif %}
      </div>
    {% else %}
      <div class="reel-placeholder">
        <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <polygon points="5 3 19 12 5 21 5 3"></polygon>
        </svg>
        <p>{{ block.settings.placeholder_text | default: 'Add a video to showcase your product' }}</p>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="reel-overlay">
        {% if block.settings.title != blank %}
          <h3 class="reel-title">{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.description != blank %}
          <p class="reel-description">{{ block.settings.description }}</p>
        {% endif %}
        {% if block.settings.button_label != blank %}
          <a href="{{ block.settings.button_link | default: '#' }}" class="reel-button">
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.show_interactions %}
      <div class="reel-interactions">
        <button class="reel-action" data-action="like">
          <svg width="24" height="24" fill="none" stroke="currentColor">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
          <span class="reel-count">{{ block.settings.like_count | default: 0 }}</span>
        </button>
        <button class="reel-action" data-action="comment">
          <svg width="24" height="24" fill="none" stroke="currentColor">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
          <span class="reel-count">{{ block.settings.comment_count | default: 0 }}</span>
        </button>
        <button class="reel-action" data-action="share">
          <svg width="24" height="24" fill="none" stroke="currentColor">
            <circle cx="18" cy="5" r="3"></circle>
            <circle cx="6" cy="12" r="3"></circle>
            <circle cx="18" cy="19" r="3"></circle>
            <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
            <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .reel-container {
    position: relative;
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }

  .reel-container.left {
    margin: 0 auto 0 0;
  }

  .reel-container.center {
    margin: 0 auto;
  }

  .reel-container.right {
    margin: 0 0 0 auto;
  }

  .reel-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 9/16;
    background: #000;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .reel-video,
  .reel-iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .reel-iframe-wrapper {
    width: 100%;
    height: 100%;
  }

  .reel-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #666;
    text-align: center;
    padding: 20px;
  }

  .reel-placeholder svg {
    margin-bottom: 20px;
    opacity: 0.5;
  }

  /* Overlay Content */
  .reel-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 20px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, transparent 100%);
    color: #fff;
    z-index: 1;
  }

  .reel-title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .reel-description {
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 15px;
    opacity: 0.9;
  }

  .reel-button {
    display: inline-block;
    padding: 10px 24px;
    background: #fff;
    color: #000;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .reel-button:hover {
    transform: scale(1.05);
  }

  /* Interactions Panel */
  .reel-interactions {
    position: absolute;
    right: 15px;
    bottom: 100px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    z-index: 2;
  }

  .reel-action {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: none;
    color: #fff;
    padding: 12px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
  }

  .reel-action:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .reel-action.liked {
    color: #ff4458;
  }

  .reel-action.liked svg {
    fill: #ff4458;
  }

  .reel-count {
    font-size: 12px;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .reel-container {
      max-width: 100%;
    }

    .reel-wrapper {
      border-radius: 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const reelActions = document.querySelectorAll('.reel-action[data-action="like"]');

    reelActions.forEach(action => {
      action.addEventListener('click', function() {
        this.classList.toggle('liked');
        const count = this.querySelector('.reel-count');
        if (count) {
          let currentCount = parseInt(count.textContent) || 0;
          count.textContent = this.classList.contains('liked') ? currentCount + 1 : currentCount - 1;
        }
      });
    });
  });
</script>

