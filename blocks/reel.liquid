    <div class="ai-social-video-left-{{ ai_gen_id }}">
      <div class="ai-social-video-phone-mockup-{{ ai_gen_id }}">
        <div class="ai-social-video-phone-screen-{{ ai_gen_id }}">
          {% if block.settings.video %}
            <video
              class="ai-social-video-phone-video-{{ ai_gen_id }}"
              autoplay
              muted
              loop
              playsinline
              preload="metadata"
            >
              <source src="{{ block.settings.video }}" type="video/mp4">
            </video>
          {% else %}
            <div class="ai-social-video-phone-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div style="margin-top: 10px;">Add a video to get started</div>
            </div>
          {% endif %}
        </div>
      </div>

      {% if block.settings.review_1 != blank %}
        <div class="ai-social-video-review-bubble-{{ ai_gen_id }}">
          {{ block.settings.review_1 }}
        </div>
      {% endif %}

      {% if block.settings.review_2 != blank %}
        <div class="ai-social-video-review-bubble-{{ ai_gen_id }}">
          {{ block.settings.review_2 }}
        </div>
      {% endif %}

      {% if block.settings.review_3 != blank %}
        <div class="ai-social-video-review-bubble-{{ ai_gen_id }}">
          {{ block.settings.review_3 }}
        </div>
      {% endif %}
    </div>

    <div class="ai-social-video-right-{{ ai_gen_id }}">
