{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-accordion-container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
  }

  .ai-accordion-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_margin_bottom }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    line-height: 1.2;
  }

  .ai-accordion-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.accordion_spacing }}px;
  }

  .ai-accordion-item-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .ai-accordion-item-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.border_hover_color }};
  }

  .ai-accordion-header-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.header_padding_vertical }}px {{ block.settings.header_padding_horizontal }}px;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    color: {{ block.settings.header_text_color }};
    transition: all 0.3s ease;
    font-family: {{ block.settings.header_font.family }}, {{ block.settings.header_font.fallback_families }};
  }

  .ai-accordion-header-{{ ai_gen_id }}:hover {
    color: {{ block.settings.header_text_hover_color }};
    background-color: {{ block.settings.header_background_hover }};
  }

  .ai-accordion-header-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.header_text_color }};
    outline-offset: 2px;
  }

  .ai-accordion-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 16px;
  }

  .ai-accordion-item-{{ ai_gen_id }}.active .ai-accordion-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-accordion-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding_vertical }}px {{ block.settings.content_padding_horizontal }}px;
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: {{ block.settings.content_line_height }};
    font-family: {{ block.settings.content_font.family }}, {{ block.settings.content_font.fallback_families }};
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} p {
    margin: 0 0 16px 0;
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} ul,
  .ai-accordion-content-inner-{{ ai_gen_id }} ol {
    margin: 0 0 16px 0;
    padding-left: 20px;
  }

  .ai-accordion-content-inner-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 16px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-accordion-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: {{ block.settings.heading_margin_bottom | times: 0.8 }}px;
    }

    .ai-accordion-header-{{ ai_gen_id }} {
      padding: {{ block.settings.header_padding_vertical | times: 0.8 }}px {{ block.settings.header_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.header_font_size | times: 0.9 }}px;
    }

    .ai-accordion-content-inner-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding_vertical | times: 0.8 }}px {{ block.settings.content_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }

    .ai-accordion-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<accordion-section-{{ ai_gen_id }} class="ai-accordion-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-accordion-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-accordion-list-{{ ai_gen_id }}">
    {% for i in (1..13) %}
      {% liquid
        assign title_key = 'accordion_' | append: i | append: '_title'
        assign content_key = 'accordion_' | append: i | append: '_content'
        assign open_key = 'accordion_' | append: i | append: '_open'
        
        assign title = block.settings[title_key]
        assign content = block.settings[content_key]
        assign is_open = block.settings[open_key]
      %}

      {% if title != blank %}
        <div class="ai-accordion-item-{{ ai_gen_id }} {% if is_open %}active{% endif %}" data-accordion-item="{{ i }}">
          <button 
            class="ai-accordion-header-{{ ai_gen_id }}"
            aria-expanded="{% if is_open %}true{% else %}false{% endif %}"
            aria-controls="accordion-content-{{ ai_gen_id }}-{{ i }}"
            data-accordion-trigger="{{ i }}"
          >
            <span>{{ title }}</span>
            <svg class="ai-accordion-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6,9 12,15 18,9"></polyline>
            </svg>
          </button>
          <div 
            class="ai-accordion-content-{{ ai_gen_id }}"
            id="accordion-content-{{ ai_gen_id }}-{{ i }}"
            data-accordion-content="{{ i }}"
          >
            <div class="ai-accordion-content-inner-{{ ai_gen_id }}">
              {% if content != blank %}
                {{ content }}
              {% else %}
                <p>Add content for this accordion item.</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</accordion-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AccordionSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.accordionItems = [];
      }

      connectedCallback() {
        this.initializeAccordions();
        this.setupEventListeners();
        this.setInitialStates();
      }

      initializeAccordions() {
        this.accordionItems = Array.from(this.querySelectorAll('.ai-accordion-item-{{ ai_gen_id }}'));
      }

      setupEventListeners() {
        this.accordionItems.forEach((item) => {
          const trigger = item.querySelector('.ai-accordion-header-{{ ai_gen_id }}');
          const content = item.querySelector('.ai-accordion-content-{{ ai_gen_id }}');
          
          if (trigger && content) {
            trigger.addEventListener('click', () => {
              this.toggleAccordion(item, trigger, content);
            });

            trigger.addEventListener('keydown', (e) => {
              if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.toggleAccordion(item, trigger, content);
              }
            });
          }
        });
      }

      setInitialStates() {
        this.accordionItems.forEach((item) => {
          const content = item.querySelector('.ai-accordion-content-{{ ai_gen_id }}');
          const trigger = item.querySelector('.ai-accordion-header-{{ ai_gen_id }}');
          
          if (item.classList.contains('active')) {
            this.openAccordion(content);
          } else {
            this.closeAccordion(content);
          }
        });
      }

      toggleAccordion(item, trigger, content) {
        const isActive = item.classList.contains('active');
        
        if (isActive) {
          this.closeAccordionItem(item, trigger, content);
        } else {
          this.openAccordionItem(item, trigger, content);
        }
      }

      openAccordionItem(item, trigger, content) {
        item.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
        this.openAccordion(content);
      }

      closeAccordionItem(item, trigger, content) {
        item.classList.remove('active');
        trigger.setAttribute('aria-expanded', 'false');
        this.closeAccordion(content);
      }

      openAccordion(content) {
        const contentInner = content.querySelector('.ai-accordion-content-inner-{{ ai_gen_id }}');
        if (contentInner) {
          content.style.maxHeight = contentInner.scrollHeight + 'px';
        }
      }

      closeAccordion(content) {
        content.style.maxHeight = '0px';
      }
    }

    customElements.define('accordion-section-{{ ai_gen_id }}', AccordionSection{{ ai_gen_id }});
  })();
</script>

