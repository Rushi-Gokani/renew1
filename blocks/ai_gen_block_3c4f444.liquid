<superfoods-carousel-{{ ai_gen_id }}
  class="ai-superfoods-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-superfoods-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-superfoods-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <p class="ai-superfoods-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}

    <div class="ai-superfoods-carousel-wrapper-{{ ai_gen_id }}">
      <div class="ai-superfoods-carousel-{{ ai_gen_id }}" data-carousel>
        {% for i in (1..6) %}
          {% liquid
            assign image_key = 'product_image_' | append: i
            assign alt_key = 'product_alt_' | append: i
            assign name_key = 'product_name_' | append: i
            
            assign product_image = block.settings[image_key]
            assign product_alt = block.settings[alt_key]
            assign product_name = block.settings[name_key]
          %}

          <div class="ai-superfoods-card-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            <div class="ai-superfoods-image-wrapper-{{ ai_gen_id }}">
              {% if product_image %}
                <img
                  src="{{ product_image | image_url: width: 500 }}"
                  alt="{{ product_alt | default: product_name | escape }}"
                  class="ai-superfoods-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="500"
                  height="500"
                >
              {% else %}
                <div class="ai-superfoods-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            {% if product_name != blank %}
              <h3 class="ai-superfoods-product-name-{{ ai_gen_id }}">{{ product_name }}</h3>
            {% else %}
              <h3 class="ai-superfoods-product-name-{{ ai_gen_id }}">Superfood {{ i }}</h3>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <button
        class="ai-superfoods-nav-arrow-{{ ai_gen_id }} ai-superfoods-nav-arrow--prev-{{ ai_gen_id }}"
        data-direction="prev"
        aria-label="Previous products"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <button
        class="ai-superfoods-nav-arrow-{{ ai_gen_id }} ai-superfoods-nav-arrow--next-{{ ai_gen_id }}"
        data-direction="next"
        aria-label="Next products"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="ai-superfoods-pagination-{{ ai_gen_id }}" data-pagination></div>
  </div>
</superfoods-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class SuperfoodsCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 6;
        this.slidesPerView = this.getSlidesPerView();
        this.totalPages = Math.ceil(this.totalSlides / this.slidesPerView);
        this.currentPage = 0;
      }

      connectedCallback() {
        this.carousel = this.querySelector('[data-carousel]');
        this.prevButton = this.querySelector('[data-direction="prev"]');
        this.nextButton = this.querySelector('[data-direction="next"]');
        this.pagination = this.querySelector('[data-pagination]');

        this.setupEventListeners();
        this.createPagination();
        this.updateCarousel();
        this.handleResize();
      }

      getSlidesPerView() {
        if (window.innerWidth >= 990) return 3;
        if (window.innerWidth >= 750) return 2;
        return 1;
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.goToPrevPage());
        this.nextButton.addEventListener('click', () => this.goToNextPage());

        let startX = 0;
        let isDragging = false;

        this.carousel.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
        });

        this.carousel.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          e.preventDefault();
        });

        this.carousel.addEventListener('touchend', (e) => {
          if (!isDragging) return;
          isDragging = false;
          
          const endX = e.changedTouches[0].clientX;
          const diff = startX - endX;
          
          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.goToNextPage();
            } else {
              this.goToPrevPage();
            }
          }
        });

        window.addEventListener('resize', () => this.handleResize());
      }

      handleResize() {
        const newSlidesPerView = this.getSlidesPerView();
        if (newSlidesPerView !== this.slidesPerView) {
          this.slidesPerView = newSlidesPerView;
          this.totalPages = Math.ceil(this.totalSlides / this.slidesPerView);
          this.currentPage = Math.min(this.currentPage, this.totalPages - 1);
          this.createPagination();
          this.updateCarousel();
        }
      }

      createPagination() {
        this.pagination.innerHTML = '';
        for (let i = 0; i < this.totalPages; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-superfoods-dot-{{ ai_gen_id }} ${i === this.currentPage ? 'active' : ''}`;
          dot.setAttribute('data-page', i);
          dot.setAttribute('aria-label', `Go to page ${i + 1}`);
          dot.addEventListener('click', () => this.goToPage(i));
          this.pagination.appendChild(dot);
        }
      }

      goToPrevPage() {
        if (this.currentPage > 0) {
          this.currentPage--;
          this.updateCarousel();
        }
      }

      goToNextPage() {
        if (this.currentPage < this.totalPages - 1) {
          this.currentPage++;
          this.updateCarousel();
        }
      }

      goToPage(pageIndex) {
        this.currentPage = Math.max(0, Math.min(pageIndex, this.totalPages - 1));
        this.updateCarousel();
      }

      updateCarousel() {
        const cardWidthPercent = 100 / this.slidesPerView;
        const translateX = -this.currentPage * 100;

        this.carousel.style.transform = `translateX(${translateX}%)`;

        const computedStyles = window.getComputedStyle(this.carousel);
        const gapValue = computedStyles.getPropertyValue('gap');
        const gapPx = parseFloat(gapValue) || 0;

        const cards = this.carousel.querySelectorAll('.ai-superfoods-card-{{ ai_gen_id }}');
        cards.forEach((card) => {
          if (this.slidesPerView === 1) {
            card.style.width = `calc(100% - ${gapPx}px)`;
          } else {
            card.style.width = `${cardWidthPercent}%`;
          }
        });

        this.updatePagination();
        this.updateArrows();
      }

      updatePagination() {
        const dots = this.pagination.querySelectorAll('.ai-superfoods-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentPage);
        });
      }

      updateArrows() {
        this.prevButton.style.opacity = this.currentPage === 0 ? '0.5' : '1';
        this.nextButton.style.opacity = this.currentPage === this.totalPages - 1 ? '0.5' : '1';
        this.prevButton.disabled = this.currentPage === 0;
        this.nextButton.disabled = this.currentPage === this.totalPages - 1;
      }
    }

    customElements.define('superfoods-carousel-{{ ai_gen_id }}', SuperfoodsCarousel{{ ai_gen_id }});
  })();
</script>

